extends layout

block content
    h1 #{description}

    .well-lg
        ul.errors
            if errors
                each error, i in errors
                    li.alert.alert-danger #{error.msg}
        form(action="/schedule/add", method="post")
            .form-group
                label(for="fullname") fullname
                input.form-control(type="text", name="fullname")
                <br/>
            .form-group
                label(for="email") email
                input.form-control(type="email", name="email")
                <br/>
            .form-group
                label(for="date") date
                input.form-control(type="date", name="date")
                <br/>
            .form-group
                label(for="time") time
                input.form-control(type="time", name="time")
                <br/>
            .form-group
                label(for="timezone") timezone
                select(name='timezone')
                    option Timezone
                    option Lagos Central African Time
                    option London GMT
                    option Pacific
                    option Mountain
                    option Central
                    option Eastern
                    option Atlantic
                    option Chamarro
                    option Samoa
                    option Hawaii-Aleutian
                    option Alaska
                <br/>
            .form-group 
                label(for="contactNumber") contact
                input.form-control(type="text", name="contactNumber")
                <br/>
            .form-group 
                label(for="skypeid") skypeid
                input.form-control(type="text", name="skypeId")
                <br/>
            .form-group
                label(for="message") message
                input.form-control(type="text", name="message")
                <br/>
            input(type="submit", name='submit', value="save")
            a(href="/schedules") Back
