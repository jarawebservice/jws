extends layout
block content
    style.
        .control-label {
            font-size: 16px;
        }

        form {
            margin-top: 30px;
        }

    main   
        
        .container
            .row.main
                .main-login.main-center
                    h1.h1.jumbotron.jumbo-div Register here to get started
                form(method='post' action='/register')
                    .form-group
                        label.cols-sm-2.control-label(for='name') Your Name
                        .cols-sm-10
                            .input-group
                                span.input-group-addon
                                    i.fa.fa-user.fa(aria-hidden='true')
                                input#name.form-control(type='text' name='name' placeholder='Enter your Name')
                    .form-group
                        label.cols-sm-2.control-label(for='email') Your Email
                        .cols-sm-10
                            .input-group
                                span.input-group-addon
                                    i.fa.fa-envelope.fa(aria-hidden='true')
                                input#email.form-control(type='text' name='email' placeholder='Enter your Email')
                    .form-group
                        label.cols-sm-2.control-label(for='phone') Phone
                        .cols-sm-10
                            .input-group
                                span.input-group-addon
                                    i.fa.fa-users.fa(aria-hidden='true')
                                input#username.form-control(type='phone' name='phone' placeholder='Enter your phone Number')
                    .form-group
                        label.cols-sm-2.control-label(for='password') Password
                        .cols-sm-10
                            .input-group
                                span.input-group-addon
                                    i.fa.fa-lock.fa-lg(aria-hidden='true')
                                input#password.form-control(type='password' name='password' placeholder='Enter your Password')
                    .form-group
                        label.cols-sm-2.control-label(for='password2') Confirm Password
                        .cols-sm-10
                            .input-group
                                span.input-group-addon
                                    i.fa.fa-lock.fa-lg(aria-hidden='true')
                                input#confirm.form-control(type='password' name='password2' placeholder='Confirm your Password')
                    .form-group
                        button.btn.btn-default(type='submit') Register

