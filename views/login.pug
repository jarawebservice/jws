extends layout
block content
    style.
        body{
            font-family: "HelveticaNeue-Medium", "Helvetica Neue Medium", "Helvetica Neue", Helvetica, Arial, sans-serif;
            background:#00555e;
        }

        .what{
            text-align: center;
            line-height: 1;
            padding: 0;
            margin: 0;
            color: #fff;
            letter-spacing: -5px;
            font-size: 60px;
            font-weight: lighter;
            margin-top:10%;
        }
        input[type=date], input[type=email], input[type=tel], input[type=text], input[type=time], select {
            border: .063em solid #d6d2d2;
            border-radius: 3px;
            width: 17em;
            font-size: 1.2em;
            height:130px;
        }

        input{
            
            border-bottom-width: 2px;
            font-weight: bold;
            margin: 0 auto;
            display: block;
            background: 0;
            border: 0;
            border-bottom: 3px solid #fff;
            color: #fff;
            outline: none;
            text-align: center;
            
            font-size:40px;
        }

        .pass{
            display:none;
        }

        .info{
        
            color:rgb(32, 32, 32);
            text-align:center;
            font-size:20px;
            text-transform:uppercase;
        
        }
    main    
        h1.h1 Login here
        .user.what.visible
                | What is your Username?
                input.focus(type='text')
        .pass.what
            | What is your Password?
            input.cool(type='password')
        p.info Press enter continue.

    script.
        $(document).ready(function(){
            $('.focus').focus();
            $(document).keypress(function(e) {
                if(e.which == 13) {
                var user = $('.user');
                var pass = $('.pass');
                $('.focus').focus();
                if(user.hasClass('visible')){
                    
                    user.removeClass('visible').fadeOut(function(){
                    pass.addClass('visible').fadeIn(function(){
                        $('.cool').focus();
                    });
                    
                    });
                }else if(pass.hasClass('visible')){
                
                    pass.removeClass('visible').fadeOut(function(){
                    user.addClass('visible').fadeIn(function(){
                        
                        $('.focus').focus();
                        
                        
                    });
                    
                    });
                
                }
                }
            });
            
            });


