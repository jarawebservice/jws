extends layout
block content
    style
        include ../public/stylesheets/login.css
   
    .main
        .row
            h3
                | Please Log In, or 
                a(href='#') Sign Up
            |       
            .row
                .col-xs-6.col-sm-6.col-md-6
                    a.btn.btn-lg.btn-primary.btn-block(href='/auth/facebook') Facebook
                .col-xs-6.col-sm-6.col-md-6
                    a.btn.btn-lg.btn-info.btn-block(href='#') Google
            .login-or
                hr.hr-or
                span.span-or or
            |       
            form(role='form' method="post" action="/register/login")
                .form-group
                    label(for='inputUsernameEmail') Username or email
                    input#inputUsernameEmail.form-control(type='text' name="username" required autofocus)
                .form-group
                    a.pull-right(href='#') Forgot password?
                    label(for='inputPassword') Password
                    input#inputPassword.form-control(type='password' name="password" required)
                .checkbox.pull-right
                    label
                        input(type='checkbox')
                        |             Remember me
                button.btn.btn.btn-primary(type='submit')
                    | Log In

